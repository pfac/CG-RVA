\def\@maketitle
   {
   \newpage
   \null
   \vskip -0.3cm
\thispagestyle{empty}
   \begin{center}
      {\LARGE \bf \@title \par}
      % additional two empty lines at the end of the title
      \vspace*{24pt}
      {
      \large
      \lineskip .5em
      \begin{tabular}[t]{c}
         \@author
      \end{tabular}
      \par
      }
      % additional small space at the end of the author name
      \vskip .5em
      {
       \large
      \begin{tabular}[t]{c}
         \@affiliation
      \end{tabular}
      \par
      \ifx \@empty \@email
      \else
         \begin{tabular}{r@{~}l}
            E-mail: & {\tt \@email}
         \end{tabular}
         \par
      \fi
      }
      % additional empty line at the end of the title block 
      \vspace*{12pt} 
      {
      \begin{tabular*}{17.24cm}{c}
      \hline
      \newline
      \end{tabular*}
      \begin{minipage}[b]{16.2cm}
      \noindent{\normalsize\bf \textsf{Resumo\\}}%
      \it%
      \@abstract \\

	  \ifx \@empty \@additionalabstract
      \else
	     \noindent{\normalsize\bf \textsf{\@additionalabstracttitle\\}}
         \@additionalabstract \\
      \fi

      \noindent{\normalsize\bf \textsf{Palavras-Chave}\\}%
      \@keywords
      \end{minipage}
      \vspace*{5mm}
      \begin{tabular*}{17.24cm}{c}
      \hline
      \end{tabular*}
      }
   \end{center}
   } 

\def\affiliation#1{\gdef\@affiliation{#1}} \gdef\@affiliation{}

\def\email#1{\gdef\@email{#1}}
\gdef\@email{}


\def\abstract#1{\gdef\@abstract{#1}} \gdef\@abstract{}
\def\additionalabstracttitle#1{\gdef\@additionalabstracttitle{#1}} \gdef\@additionalabstracttitle{}
\def\additionalabstract#1{\gdef\@additionalabstract{#1}} \gdef\@additionalabstract{}
\def\keywords#1{\gdef\@keywords{#1}} \gdef\@keywords{}

\newlength{\@ctmp}
\newlength{\@figindent}
\setlength{\@figindent}{1pc}

\long\def\@makecaption#1#2{
   \vskip 10pt
   \setbox\@tempboxa\hbox{\tenhv\noindent #1.~#2} 
   \setlength{\@ctmp}{\hsize}
   \addtolength{\@ctmp}{-\@figindent}\addtolength{\@ctmp}{-\@figindent}
   % IF longer than one indented paragraph line
   \ifdim \wd\@tempboxa >\@ctmp
      % THEN set as an indented paragraph
      \begin{list}{}{\leftmargin\@figindent \rightmargin\leftmargin} 
         \item[]\tenhv #1.~#2\par
      \end{list}
   \else
      % ELSE center
      \hbox to\hsize{\hfil\box\@tempboxa\hfil}
   \fi}

% correct heading spacing and type
\def\section{\@startsection {section}{1}{\z@}
   {2pt plus 2pt minus 2pt}{2pt plus 2pt minus 2pt} {\scshape \elvbf}}
\def\subsection{\@startsection {subsection}{2}{\z@}
   {2pt plus 2pt minus 2pt}{2pt plus 2pt minus 2pt} {\elvbf}}
\def\subsubsection{\@startsection {subsubsection}{3}{\z@}
   {2pt plus 2pt minus 2pt}{2pt plus 2pt minus 2pt} {\tenhv}}

% add the period after section numbers
\newcommand{\Section}[1]{\section{\hskip -1em.~#1}}
\newcommand{\Sectionn}[1]{\section*{\hskip - 0.2em~#1}}
\newcommand{\SubSection}[1]{\subsection{\hskip -1em.~#1}}
\newcommand{\SubSubSection}[1]{\subsubsection{\hskip -1em.~#1}}

